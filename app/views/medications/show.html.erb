<h1><%= @medication.name %></h1>


<h3>Prescriptions</h3>

<table class="table">

  <thead>
  <tr>
    <th>Patient</th>
    <th>Dosage / Schedule</th>
    <th>Dates</th>
    <th>Prescribed By</th>
  </tr>
  </thead>

  <tbody>
  <%= @prescriptions.each do |prescription| %>

  <tr>
    <td><%= prescription.patient_id %></td>
    <td><%= prescription.dosage %></td>
    <td><%= prescription.starts_on %></td>
    <td><%= prescription.user_id %></td>
  </tr>
  <% end %>

  </tbody>

</table>
